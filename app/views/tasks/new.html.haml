.container
  %h2.heading New Card
  %ul
    - @task.errors.full_messages.each do |message|
      %li= message
  = form_with(model: @task, url: board_tasks_path, method: 'post', local: true) do |f|
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :description, 'Description'
    %div
      = f.text_area :description, class: 'text'
    %div
      = f.label :expiry, 'Expiry'
    %div
      = f.date_field :expiry, class: 'text'
    %div
    = f.submit 'Submit', class: 'btn-primary'
