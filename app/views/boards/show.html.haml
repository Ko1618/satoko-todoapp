.container
  %h2.heading= @board.title
  - @tasks.each do |task|
    = link_to board_task_path(board_id: @board.id, id: task.id) do
      .card
        - if task.eyecatch.attached?
          .card_image
            = image_tag task.eyecatch
        .card_title
          = task.title
        .card_content
          = task.description
  = link_to 'ï¼‹Add new task', new_board_task_path(@board), class: 'new_board'
